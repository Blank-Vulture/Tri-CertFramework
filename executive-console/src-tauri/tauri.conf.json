{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Executive Console",
  "version": "0.1.0",
  "identifier": "jp.tricert.executive",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Executive Console",
        "width": 1280,
        "height": 900,
        "minWidth": 1024,
        "minHeight": 720,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' http://localhost:5173 ws://localhost:5173; img-src 'self' data:; script-src 'self' http://localhost:5173 'unsafe-eval' 'wasm-unsafe-eval'; style-src 'self' 'unsafe-inline' http://localhost:5173; font-src 'self' data:; object-src 'none'; frame-src 'none'; base-uri 'self'"
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
